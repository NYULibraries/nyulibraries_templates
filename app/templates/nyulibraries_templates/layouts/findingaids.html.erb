<!DOCTYPE html>
<html>
  <head>
    <%= meta %>
    <title><%= application_title %></title>
    <%= application_stylesheet %>
    <%= application_javascript %>
  </head>
  <%= content_tag 'body', onload: onload, class: body_class, id: body_id do %>
    <%= prepend_body %>
    {{> common/header}}
    {{> common/nav}}
    <div class="nyu-container">
      {{#left_sidebar}}
      <div class="col-sm-3">
        {{> common/left_sidebar}}
      </div>
      <div class="col-sm-7">
        {{> common/alerts }}
        {{> common/tabs}}
        {{prepend_yield}}
        {{yield}}
      </div>
      {{/left_sidebar}}
      {{^left_sidebar}}
      <div class="col-sm-10">
        {{> common/alerts }}
        {{> common/tabs}}
        {{prepend_yield}}
        {{yield}}
      </div>
      {{/left_sidebar}}
      <div class="col-sm-2">
        <div id="sidebar" class="sidebar">
          <%= render 'common/right_sidebar' %>
        </div>
      </div>
    <% end %>
    <%= render 'common/footer' %>
  </body>
</html>
