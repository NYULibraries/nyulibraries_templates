<aside role="alert">
<%= render 'common/persistent_alert' %>
<%- if flash[:alert].present? -%>
  <%= content_tag(:div, class: ["alert", "alert-danger", "fade", "in"]) do -%>
    <a href="#" class="close" data-dismiss="alert">&times;</a>
    <%= content_tag :div, flash[:alert] -%>
  <%- end -%>
<%- end -%>
<%- if flash[:error].present? -%>
  <%= content_tag(:div, class: ["alert", "alert-danger", "fade", "in"]) do -%>
    <a href="#" class="close" data-dismiss="alert">&times;</a>
    <%= content_tag :div, flash[:error] -%>
  <%- end -%>
<%- end -%>
<%- if flash[:notice].present? -%>
  <%= content_tag(:div, class: ["alert", "alert-info", "fade", "in"]) do -%>
    <a href="#" class="close" data-dismiss="alert">&times;</a>
    <%= content_tag :div, flash[:notice] -%>
  <%- end -%>
<%- end -%>
</aside>
